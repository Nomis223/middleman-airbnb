<% flat = data.flats[owner] %>
<div class="banner-half" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin'); height: 50vh; background-position: center;">
</div>

<p><% flat.name %></p>
<h1><% flat.description %></h1>
<p><% flat.city_name %></p>

<div id="flat-description">
	<div class="container">
		<div class="row">


			<div class="col-xs-12 col-sm-12 col-lg-6">
				<div class="header-flat-details">
					<div claass="header-flat-owner">
						<%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "avatar-large" %>
						<p><%= owner %></p>
					</div>
					
					<div class="header-flat-name">
						<h4><%= flat.description %></h4>
						<h6><%= flat.city_name %></h6>
					</div>
				</div>
			</div>


			<div class="col-xs-12 col-sm-12 col-lg-6">
				<div class="card card-form">
					<form action="" class="f-group">
						<h4>Book this flat</h4>
						<div class="form-group">
							<div class="row">
								<div class="col-xs-6">
									<input type="text" class="form-control" placeholder="checkin" id="checkin">
								</div>
								<div class="col-xs-6">
									<input type="text" class="form-control" placeholder="checkout">
								</div>
							</div>
							<div class="form-group">
								<select name="" id="guests" class="form-control">
									<option value="1">1 guest</option>
									<option value="2">2 guests</option>
									<option value="3">3 guests</option>
								</select>
							</div>
						</div>
						<input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
					</form>
				</div> 
			</div>
		</div>
	</div>
</div>